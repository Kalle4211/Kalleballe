{
    "manifest_version": 3,
    "name": "BankID QR Capture",
    "version": "1.0",
    "description": "Captures and broadcasts QR codes from BankID",
    "permissions": [
        "activeTab",
        "contextMenus",
        "https://web-production-c116.up.railway.app/*"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "*://*.bankid.com/*",
        "*://*.bankid.se/*",
        "<all_urls>"
    ],
    "action": {
        "default_title": "BankID QR Capture",
        "default_icon": "icon48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.bankid.com/*",
                "*://*.bankid.se/*"
            ],
            "js": ["content.js"]
        }
    ]
} 